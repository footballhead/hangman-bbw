<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hackathon.michael.hangman.MainMenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HANGMAN!"
        android:id="@+id/textView3"
        android:textSize="100px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy"
        android:id="@+id/easyButton"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Normal"
        android:id="@+id/normalButton"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/easyButton"
        android:layout_alignStart="@+id/easyButton"
        android:layout_alignEnd="@+id/easyButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hard"
        android:id="@+id/hardButton"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/normalButton"
        android:layout_alignStart="@+id/normalButton"
        android:layout_alignEnd="@+id/normalButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom"
        android:id="@+id/customButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/hardButton"
        android:layout_alignEnd="@+id/hardButton" />
</RelativeLayout>
