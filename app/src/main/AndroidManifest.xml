<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hackathon.michael.hangman" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainMenuActivity"
            android:label="@string/title_activity_main_menu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameScreen"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".WinActivity"
            android:label="@string/title_activity_win" >
        </activity>
        <activity
            android:name=".LoseActivity"
            android:label="@string/title_activity_lose" >
        </activity>
        <activity
            android:name=".CustomWordActivity"
            android:label="@string/title_activity_custom_word" >
        </activity>
    </application>

</manifest>
