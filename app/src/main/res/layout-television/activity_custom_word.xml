<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.michaelhitchens.hackathon.hangman.CustomWordActivity"
    android:padding="48dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter custom phrase:"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:textSize="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_above="@+id/customWordText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customWordText"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:text="APPLE"
        android:textSize="50dp"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:singleLine="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/confirmButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/customWordText" />

</RelativeLayout>
