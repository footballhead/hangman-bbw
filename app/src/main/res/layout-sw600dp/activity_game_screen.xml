<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:padding="16dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/gallowsImage"
            android:layout_gravity="center_vertical"
            android:src="@drawable/gallows0"
            android:layout_weight="0.5" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="A"
                android:id="@+id/button_a"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="F"
                android:id="@+id/button_f"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="K"
                android:id="@+id/button_k"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="P"
                android:id="@+id/button_p"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="U"
                android:id="@+id/button_u"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="Z"
                android:id="@+id/button_z"
                android:layout_weight="0.1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="B"
                android:id="@+id/button_b"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="G"
                android:id="@+id/button_g"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="L"
                android:id="@+id/button_l"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="Q"
                android:id="@+id/button_q"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="V"
                android:id="@+id/button_v"
                android:layout_weight="0.1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="C"
                android:id="@+id/button_c"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="H"
                android:id="@+id/button_h"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="M"
                android:id="@+id/button_m"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="R"
                android:id="@+id/button_r"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="W"
                android:id="@+id/button_w"
                android:layout_weight="0.1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="D"
                android:id="@+id/button_d"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="I"
                android:id="@+id/button_i"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="N"
                android:id="@+id/button_n"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="S"
                android:id="@+id/button_s"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="X"
                android:id="@+id/button_x"
                android:layout_weight="0.1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="E"
                android:id="@+id/button_e"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="J"
                android:id="@+id/button_j"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="O"
                android:id="@+id/button_o"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="T"
                android:id="@+id/button_t"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="Y"
                android:id="@+id/button_y"
                android:layout_weight="0.1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/secretWordLabel"
        android:layout_weight="0.25"
        android:typeface="monospace"
        android:gravity="center"
        android:textSize="80dp" />

</LinearLayout>